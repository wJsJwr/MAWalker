<?xml version="1.0" encoding="utf-8"?>
<config><!-- 所有的字符都应该是半角的，请注意 -->
	<username></username>
	<password></password>
	<user_agent>Million/250 (t03gchn; t03gzc; 4.1.2)
		samsung/t03gzc/t03gchn:4.1.2/JZO54K/N7100ZCDMD3:user/release-keys
		GooglePlay
	</user_agent>

	<!-- 以下选项未特别说明，选是则填1，否则填0 -->
	<option>
		<!-- 优先考虑妖精战 -->
		<fairy_battle_first>1</fairy_battle_first>

		<!-- BC不足FairyDeck的BC时，依旧跑图 -->
		<allow_bc_insuffient>1</allow_bc_insuffient>

		<!-- 只跑最低AP的图 -->
		<min_ap_only>0</min_ap_only>

		<!--遇敌停步 -->
		<go_stop>1</go_stop>

		<!-- 自动加点，0不加，1全加BC，2全加AP -->
		<auto_add_point>1</auto_add_point>

		<!-- 里图开关，0不走里图，1走里图；在走里图时，走最小AP图的话，表图会走最大，里图走最小 -->
		<inner_instance>1</inner_instance>

		<!--每日限定副本（送红绿试管的那两个） -->
		<specil_instance>1</specil_instance>

		<!-- 允许舔同一个怪 -->
		<allow_attack_same_fairy>0</allow_attack_same_fairy>

		<!-- 自动收集妖精战礼物 -->
		<receive_battle_present>1</receive_battle_present>

		<!-- 自动收箱子 -->
		<receive_box>1</receive_box>

		<!--login的时候是否查询贡献 -->
		<partyrank>0</partyrank>

		<!-- debug输出xml(开发者使用) -->
		<debug>0</debug>
	</option>

	<use>
		<auto_use_ap>0</auto_use_ap><!-- 自动吃AP药 -->
		<auto_use_bc>0</auto_use_bc><!-- 自动吃BC药 -->
		<strategy>
			<ap>
				<low>1</low><!-- 低于此值吃药 -->
				<half>1</half><!-- 0:只吃全药; 1:只吃半药; 2:都吃(先吃半药，再吃全药) -->
				<full_low>10</full_low><!-- 保留这点全药 -->
			</ap>
			<bc>
				<low>50</low>
				<half>1</half>
				<full_low>10</full_low>
			</bc>
		</strategy>
	</use>

	<deck>
		<!-- 下列各项中no表示卡组号： 0：卡组1；1：卡组2；2：卡组3；3：推荐卡组 bc表示使用该卡组所需的BC 各选项的意义： FairyDeck：打妖精用 
			RareFairyDeck：打觉醒用 GuildFairyDeck：打外敌用 FriendFairyBattleRare：打好友觉醒用 FriendFairyBattleNormal：打好友妖精用 -->
		<deck_profile>
			<name>FairyDeck</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>RareFairyDeck</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>GuildFairyDeck</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>FriendFairyBattleRare</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>FriendFairyBattleNormal</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
	</deck>

	<!-- 本项是用来卖卡的，以供长期挂机。 id是卡片的id，有意者可以自己填 -->
	<sell_card>
		<policy>sell</policy>
		<!-- <id></id> -->
	</sell_card>
</config>
