<?xml version="1.0" encoding="utf-8"?>
<config><!-- 所有的字符都应该是半角的，请注意 -->
	<username></username>
	<password></password>
	<user_agent>Million/236 (t03gchn; t03gzc; 4.1.2) samsung/t03gzc/t03gchn:4.1.2/JZO54K/N7100ZCDMD3:user/release-keys GooglePlay</user_agent>
	<profile>1</profile><!-- 不要改 -->
	<option> <!-- 以下四个选项如果选是则填1，否则填0 -->
		<fairy_battle_first>0</fairy_battle_first><!-- 优先考虑妖精战 -->
		<allow_bc_insuffient>1</allow_bc_insuffient><!-- BC不足FairyDeck的BC时，依旧跑图 -->
		<this_ap_only>-1</this_ap_only><!-- 固定跑此AP的图，-1表示让程序决定(即不固定) -->
		<auto_add_point>0</auto_add_point><!-- 自动加点 -->
		<allow_attack_same_fairy>0</allow_attack_same_fairy><!-- 允许舔同一个怪 -->
		<night_mode>1</night_mode><!-- 夜间模式 -->
		<receive_battle_present>1</receive_battle_present><!-- 自动收集妖精战礼物 -->
		<debug>0</debug><!-- debug输出xml(开发者使用) -->
	</option>
	<use>
		<auto_use_ap>1</auto_use_ap><!-- 自动吃AP药 -->
		<auto_use_bc>1</auto_use_bc><!-- 自动吃BC药 -->
		<strategy>
			<ap>
				<low>1</low><!-- 低于此值吃药 -->
				<half>1</half><!-- 0:只吃全药; 1:只吃半药; 2:都吃(先吃半药，再吃全药) -->
				<full_low>10</full_low><!-- 保留这点全药 -->
			</ap>
			<bc>
				<low>50</low>
				<half>1</half>
				<full_low>10</full_low>
			</bc>
		</strategy>
	</use>
	<deck>
		<!--
			下列各项中no表示卡组号：
			0：卡组1；1：卡组2；2：卡组3；3：推荐卡组
			bc表示使用该卡组所需的BC
			各选项的意义：
			FairyDeck：打妖精用
			RareFairyDeck：打觉醒用
			GuildFairyDeck：打外敌用
			FriendFairyBattleRare：打好友觉醒用
			FriendFairyBattleNormal：打好友妖精用
		-->
		<deck_profile>
			<name>FairyDeck</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>RareFairyDeck</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>GuildFairyDeck</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>FriendFairyBattleRare</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
		<deck_profile>
			<name>FriendFairyBattleNormal</name>
			<no>0</no>
			<bc>0</bc>
		</deck_profile>
	</deck>
	<sell_card>
		<!--
			本项是用来卖卡的，以供长期挂机。
			id是卡片的id，有意者可以自己填
		-->
		<policy>sell</policy>
		<!-- <id></id> -->
	</sell_card>
</config>
